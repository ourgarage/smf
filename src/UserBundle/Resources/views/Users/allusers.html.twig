                    <button type="submit">Delete</button>
                </form>#}
                {{ form_start(form, {'action': path('del-user', {'id': user.id}), 'method': 'DELETE'}) }}

                {{ form_end(form) }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
