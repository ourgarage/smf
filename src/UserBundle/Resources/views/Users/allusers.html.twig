{% extends 'UserBundle:Layout:main.html.twig' %}

{% block title %}All Users{% endblock %}

{% block body %}
    <h2>All users:</h2>
    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('edit-user', {'id': user.id }) }}">{{ user.name }}</a>

                <form action="{{ path('del-user', {'id': user.id }) }}" method="post">
                    <button type="submit">Delete</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
