{#{% extends 'UserBundle:Layout:main.html.twig' %}#}

{% block title %}All Users{% endblock %}

{% block body %}
    <h2>All users:</h2>
    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('users', {'id': user.id }) }}">{{ user.name }}</a>

                <form action="{{ path('users', {'id': user.id }) }}" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Delete</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}